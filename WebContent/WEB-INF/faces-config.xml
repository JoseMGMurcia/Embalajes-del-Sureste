<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">


	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>

	<managed-bean>
		<managed-bean-name>registro</managed-bean-name>
		<managed-bean-class>control.CRegistro</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>modelo</property-name>
			<value>#{modelo}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>gerente</managed-bean-name>
		<managed-bean-class>control.CGerente</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>modelo</property-name>
			<value>#{modelo}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>empleado</managed-bean-name>
		<managed-bean-class>control.CEmpleado</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>modelo</property-name>
			<value>#{modelo}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>usuario</managed-bean-name>
		<managed-bean-class>control.CUsuarios</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>modelo</property-name>
			<value>#{modelo}</value>
		</managed-property>
	</managed-bean>

</faces-config>
